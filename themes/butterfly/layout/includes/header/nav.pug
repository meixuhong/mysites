nav#nav
  span#blog_name
    a#site-name(href=url_for('/')) #[=config.title]
    span#menus
      !=fragment_cache('menus', function(){return partial('includes/header/menu_item')})
    #toggle-menu
      a.site-page
        i.fas.fa-bars.fa-fw
    if theme.darkmode.enable && theme.darkmode.button
      div.button.mode-button#darkmode(type="button" title=_p('rightside.night_mode_title'))
        a.site-page.social-icon
          i.fas.fa-adjust.fa-fw
    if (theme.algolia_search.enable || theme.local_search.enable)
      #search-button
        a.site-page.social-icon.search
          i.fas.fa-search.fa-fw
          span=' ' + _p('search')


